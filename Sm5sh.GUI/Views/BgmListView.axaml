<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Sm5sh.GUI.ViewModels;assembly=Sm5sh.GUI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sm5sh.GUI.Views.BgmListView">
  <Grid>
    <DataGrid IsVisible="True" CanUserReorderColumns="True" CanUserResizeColumns="True" 
              CanUserSortColumns="True" IsReadOnly="True" Items="{Binding Items, Mode=OneWay}">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Series" Binding="{Binding SeriesTitle, Mode=OneWay}" />
        <DataGridTextColumn Header="Game" Binding="{Binding GameTitle, Mode=OneWay}" />
        <DataGridTextColumn Header="Title" Binding="{Binding Title, Mode=OneWay}" />
        <DataGridTextColumn Header="Record" Binding="{Binding RecordType, Mode=OneWay}" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>